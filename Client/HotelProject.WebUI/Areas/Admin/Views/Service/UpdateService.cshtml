@model HotelProject.WebUI.Dtos.ServiceDto.UpdateServiceDto
@{
    ViewData["Title"] = "UpdateService";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="form-validation">
                    <form class="form-valide" action="#" method="post" novalidate="novalidate">
                        <input type="text" name="id" value="@Model.id" hidden/>
                        <div class="form-group row">
                            <label class="col-lg-4 col-form-label" for="val-username">
                                Icon Url <span class="text-danger">*</span>
                            </label>
                            <div class="col-lg-6">
                                <input type="text" class="form-control" value="@Model.IconUrl" id="val-username" name="IconUrl" placeholder="İcon Adresini giriniz">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-lg-4 col-form-label" for="val-title">
                                Başlık <span class="text-danger">*</span>
                            </label>
                            <div class="col-lg-6">
                                <input type="text" class="form-control" value="@Model.Title" id="val-title" name="Title" placeholder="İcon Başlık">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-lg-4 col-form-label" for="val-suggestions">
                                Açıklama <span class="text-danger">*</span>
                            </label>
                            <div class="col-lg-6">
                                <textarea class="form-control" id="val-suggestions"  name="Description" rows="5" placeholder="Hizmetinizi kısaya açıklayınız">@Model.Description</textarea>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-lg-8 ml-auto">
                                <button type="submit" class="btn btn-primary">Hizmet Bilgilerini Güncelle</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

